<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#1E1E1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"/>

        <!-- Full Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textColor="#E0E0E0"
            android:textSize="13sp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/nameField"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your name"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:layout_marginBottom="16dp"/>

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#E0E0E0"
            android:textSize="13sp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:layout_marginBottom="10dp"/>

        <!-- Email Requirements -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Requirements:"
                android:textColor="#E0E0E0"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/gmailCheckLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✗"
                    android:textSize="16sp"
                    android:textColor="#D32F2F"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add a valid Gmail"
                    android:textColor="#BBBBBB"
                    android:textSize="11sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Phone -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone (optional)"
            android:textColor="#E0E0E0"
            android:textSize="13sp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/phoneField"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter phone"
            android:inputType="phone"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:layout_marginBottom="16dp"/>

        <!-- Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#E0E0E0"
            android:textSize="13sp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/passwordField"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:layout_marginBottom="10dp"/>

        <!-- Password Requirements -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password Requirements:"
                android:textColor="#E0E0E0"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/minLengthCheckLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✗"
                    android:textSize="16sp"
                    android:textColor="#D32F2F"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="At least 8 characters"
                    android:textColor="#BBBBBB"
                    android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/capitalLetterCheckLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✗"
                    android:textSize="16sp"
                    android:textColor="#D32F2F"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contains at least one capital letter (A-Z)"
                    android:textColor="#BBBBBB"
                    android:textSize="11sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Confirm Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textColor="#E0E0E0"
            android:textSize="13sp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/confirmPasswordField"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:layout_marginBottom="20dp"/>

        <!-- Doctor-only fields -->
        <LinearLayout
            android:id="@+id/doctorFieldsBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444444"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor Details"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Specialty"
                android:textColor="#E0E0E0"
                android:textSize="13sp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/specialtyField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="e.g., Endocrinologist"
                android:inputType="text"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:textColor="#00E5FF"
                android:textColorHint="#888888"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clinic Address"
                android:textColor="#E0E0E0"
                android:textSize="13sp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/clinicField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Clinic address"
                android:inputType="text"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available Days"
                android:textColor="#E0E0E0"
                android:textSize="13sp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/availableDaysField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="e.g., Mon,Wed,Fri"
                android:inputType="text"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:textColor="#00FF88"
                android:textColorHint="#888888"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

        <!-- Register Button -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Create Account"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0D7377"
            android:layout_marginBottom="16dp"/>

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="← Back"
            android:textColor="#FFFFFF"
            android:backgroundTint="#555555"/>

    </LinearLayout>

</ScrollView>

